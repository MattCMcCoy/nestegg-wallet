{
  "name": "@nestegg/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "drizzle:generate": "pnpm with-env drizzle-kit generate",
    "drizzle:migrate": "pnpm with-env drizzle-kit migrate",
    "drizzle:push": "pnpm with-env drizzle-kit push",
    "drizzle:studio": "pnpm with-env drizzle-kit studio",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.13.8",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "postgres": "^3.4.8",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@nestegg/eslint-config": "workspace:*",
    "@nestegg/prettier-config": "workspace:*",
    "@nestegg/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.31.5",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@nestegg/prettier-config"
}
